<h1>Eat-Da-Burger!</h1>


<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>
          <span>{{id}}</span>
          <span>{{burger_name}}</span>
          <span><button class="devour-btn">Devour the Burger!</button></span>
      </p>
    {{/unless}}
  {{/each}}
</ul>


<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>
          <span>{{id}}</span>
          <span>{{burger_name}}</span>
      </p>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
